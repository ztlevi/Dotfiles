#!/usr/bin/env zsh
source ${0:A:h}/../../deploy
source env.zsh

install() {
  brew install nodenv node-build
  # Install nodenv-package-rehash, which runs `nodenv rehash` automatically
  git clone https://github.com/nodenv/nodenv-package-rehash.git "$(nodenv root)"/plugins/nodenv-package-rehash
  nodenv package-hooks install --all

  nodenv install $NODE_VERSION
  nodenv global $NODE_VERSION

  path=($NODENV_ROOT/shims $path)
  # NPM Packages
  npm install -g npm yarn prettier live-server hexo-cli \
    reveal-md typescript tslint cspell typescript-language-server
}

update() {
  brew upgrade nodenv node-build
  npm update -g
}

link() {
  mklink .* ~/
}

clean() {
  rm -rf $NODENV_ROOT
  rm -f $XDG_CACHE_HOME/${SHELL##*/}/nodenv
}

init "$@"
