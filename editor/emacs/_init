#!/usr/bin/env zsh
source ${0:A:h}/../../deploy

install() {
  case $(_os) in
  macos)
    brew tap railwaycat/emacsmacport
    rm -r /Applications/Emacs.app
    brew install --cask emacs-mac
    # Enable natural-title-bar
    defaults write org.gnu.Emacs TransparentTitleBar LIGHT
    # Other tweaks
    defaults write org.gnu.Emacs Emacs.ToolBar -string no
    defaults write org.gnu.Emacs Emacs.ScrollBar -string no
    defaults write org.gnu.Emacs Emacs.MenuBar -string no
    ;;
  linux-*)
    brew install emacs
    ;;
  esac

  # Clone Doom Eemacs
  rm -rfv ~/.emacs.d
  git clone https://github.com/hlissner/doom-emacs -b develop ~/.emacs.d

  # Clone my config
  rm -rfv ~/.doom.d
  git clone https://github.com/ztlevi/doom-config ~/.doom.d

  cd ~/.emacs.d
  ~/.emacs.d/bin/doom install
}

update() {
  doom upgarde
}

link() {
  [[ -d ~/.doom.d ]] && mv ~/.doom.d $XDG_CONFIG_HOME/doom
  if [[ -d ~/.emacs.d ]]; then
    rm -rf ~/.emacs.d/.local
    mv ~/.emacs.d $XDG_CONFIG_HOME/emacs
  fi
  mklink .ctags ~/.ctags
}

clean() {
  rm -rfv ~/.doom.d
  rm -rfv ~/.emacs.d
}

init "$@"
