#!/usr/bin/env zsh
source ${0:A:h}/../../deploy
source .zshenv

install() {
  brew install zsh ripgrep fd jq \
    fasd direnv shfmt zshdb bashdb exa procs bat dust shellcheck neofetch mosh

  # Macos uses different trash app
  case $(_os) in
    macos) brew install trash ;;
    linux-*) brew install trash-cli ;;
  esac

  # zinit
  if [[ ! -d ~/.zinit ]]; then
    mkdir -p ~/.zinit
    git clone https://github.com/zdharma/zinit.git ~/.zinit/bin
  fi

  # Set default shell to zsh
  chsh -s $(which zsh) $(whoami)

  # alternative for Linux `sudo usermod -s /usr/bin/zsh <username>`

  local zsh="$(which zsh)"
  grep $zsh /etc/shells &>/dev/null || sudo tee -a /etc/shells <<<$zsh
}

update() {
  if [[ -e antigen.zsh ]]; then
    source antigen.zsh
    antigen update
  fi
}

link() {
  rm -f ~/.profile
  mklink .zsh* ~/
  mklink config/* $XDG_CONFIG_HOME/
}

clean() {
  rm -f ~/.zshrc
  rm -f ~/.zshenv
  rm -f $XDG_CONFIG_HOME/starship.toml
}

init "$@"
